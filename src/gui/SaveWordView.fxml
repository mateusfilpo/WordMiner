<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.SaveWordViewController">
   <children>
      <StackPane layoutY="26.0" prefHeight="479.0" prefWidth="502.0">
         <children>
            <Label text="Word:">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
               <StackPane.margin>
                  <Insets top="-280.0" />
               </StackPane.margin>
            </Label>
            <TextField fx:id="textFieldWord" alignment="CENTER" promptText="Enter a word">
               <StackPane.margin>
                  <Insets top="-180.0" />
               </StackPane.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <Label text="Meaning:">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="textFieldMeaning" alignment="CENTER" promptText="Enter a meaning">
               <StackPane.margin>
                  <Insets top="100.0" />
               </StackPane.margin>
               <font>
                  <Font size="24.0" />
               </font>
            </TextField>
            <Label fx:id="savedWord">
               <StackPane.margin>
                  <Insets top="270.0" />
               </StackPane.margin>
               <font>
                  <Font size="18.0" />
               </font></Label>
            <Button fx:id="btSaveWord" mnemonicParsing="false" onAction="#onBtSaveWordAction" prefHeight="41.0" prefWidth="92.0" text="Save Word">
               <StackPane.margin>
                  <Insets top="380.0" />
               </StackPane.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </StackPane>
   </children>
</AnchorPane>
